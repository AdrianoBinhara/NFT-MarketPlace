<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:xct="http://xamarin.com/schemas/2020/toolkit" xmlns:sharpnado1="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame"
    x:Class="NFTMarket.Views.HomePage"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="{x:StaticResource Background}">
    <ContentPage.Resources>
        <ResourceDictionary>
             <ControlTemplate
                x:Key="FabTabItemTemplate">
                <Grid>
                    <ImageButton
                        InputTransparent="True"
                        Source="MintedButton.png"
                        HorizontalOptions="Center"
                        BackgroundColor="Transparent"
                        HeightRequest="160"
                        Aspect="AspectFill"
                        WidthRequest="70" 
                        VerticalOptions="StartAndExpand"
                        Margin="0,0,0,15">
                        <ImageButton.CornerRadius>
                            <OnPlatform x:TypeArguments="x:Int32">
                                <On Platform="iOS" Value="30"/>
                                <On Platform="Android" Value="60"/>
                                <On Platform="UWP" Value="36"/>
                            </OnPlatform>
                        </ImageButton.CornerRadius>
                    </ImageButton>
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid BackgroundColor="{x:StaticResource Background}">
            <xct:TabView
                TabStripPlacement="Bottom"
                TabIndicatorPlacement="Top"
                TabStripHeight="90"
                BackgroundColor="Blue"
                TabContentBackgroundColor="{x:StaticResource Background}">

                <xct:TabView.TabStripBackgroundView>
                     <sharpnado1:MaterialFrame
                           Style="{x:StaticResource Key=AcrylicFrame}"
                           HasShadow="False"
                           CornerRadius="40"/>
                </xct:TabView.TabStripBackgroundView>
                <xct:TabViewItem
                    Icon="Home.png"
                    Scale=".8"
                    TextColor="White"
                    Text=" "
                    TextColorSelected="Yellow">
                    <ScrollView>
                        <StackLayout Margin="0,60" Spacing="25">
                            <StackLayout.Background>
                                <RadialGradientBrush>
                                    <GradientStop Color="{x:StaticResource Background}"
                                                  Offset="1.0"/>
                                    <GradientStop Color="#330C445B"
                                                  Offset="0.1"/>
                                </RadialGradientBrush>
                            </StackLayout.Background>
                            <Label
                                HorizontalOptions="Center"
                                FontFamily="WorkSansBold"
                                TextColor="White"
                                Text="NFT Marketplace"
                                FontSize="Title"/>
                            <ScrollView
                                HorizontalScrollBarVisibility="Never"
                                Padding="15,0"
                                Orientation="Horizontal">
                                <Grid ColumnDefinitions="Auto, Auto, Auto"
                                      ColumnSpacing="10">
                                    <Image Source="art.png" HeightRequest="200"/>
                                    <Image Source="VirtualWorlds.png" HeightRequest="200" Grid.Column="1"/>
                                    <Image Source="Music.png" HeightRequest="200" Grid.Column="2"/>
                                </Grid>
                            </ScrollView>

                            <Label
                                Margin="15,0"
                                TextColor="White"
                                Text="Trending collections"
                                FontFamily="WorkSansBold"
                                FontSize="Large"/>

                            <CollectionView BackgroundColor="Transparent"
                                            HeightRequest="240"
                                            HorizontalScrollBarVisibility="Never"
                                            ItemsSource="{Binding TrendingList}">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout
                                        Orientation="Horizontal"
                                        ItemSpacing="10"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                          <sharpnado1:MaterialFrame
                                              Style="{x:StaticResource Key=AcrylicFrame}"
                                              HasShadow="False"
                                              Padding="10,10,10,70"
                                              CornerRadius="30">
                                              <StackLayout>
                                                  <Image
                                                    VerticalOptions="Start"
                                                    HeightRequest="170"
                                                    Source="{Binding Image}"/>
                                                  <StackLayout Orientation="Horizontal">
                                                      <Label
                                                          Margin="0,5"
                                                          FontFamily="WorkSansRegular"
                                                          TextColor="{x:StaticResource ShadowLight}"
                                                          Text="{Binding Name}"/>
                                                      <Label
                                                          HorizontalOptions="EndAndExpand"
                                                          FontFamily="fa-regular-400"
                                                          VerticalTextAlignment="Center"
                                                          FontSize="Small"
                                                          TextColor="Red"
                                                          Text="&#xf004;"/>
                                                          <Label
                                                              VerticalTextAlignment="Center"
                                                              HorizontalOptions="End"
                                                              FontFamily="WorkSansRegular"
                                                              TextColor="{x:StaticResource ShadowLight}"
                                                              Opacity=".5"
                                                              FontSize="Small"
                                                              Text="{Binding Likes}"/>
                                                  </StackLayout>
                                              </StackLayout>
                                          </sharpnado1:MaterialFrame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <Label
                                Margin="15,0"
                                TextColor="White"
                                Text="Top seller"
                                FontFamily="WorkSansBold"
                                FontSize="Large"/>

                            <CollectionView BackgroundColor="Transparent"
                                            HeightRequest="270"
                                            Margin="0,0,0,70"
                                            HorizontalScrollBarVisibility="Never"
                                            ItemsSource="{Binding TopSellerList}">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout
                                        Orientation="Horizontal"
                                        ItemSpacing="10"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                          <sharpnado1:MaterialFrame
                                              Style="{x:StaticResource Key=AcrylicFrame}"
                                              HasShadow="False"
                                              Padding="10,10,10,70"
                                              CornerRadius="30">
                                              <StackLayout Spacing="0">
                                                  <Image
                                                    VerticalOptions="Start"
                                                    HeightRequest="170"
                                                    Source="{Binding Image}"/>
                                                  <Label
                                                      Margin="0,5,0,0"
                                                      FontFamily="WorkSansRegular"
                                                      FontSize="Small"
                                                      TextColor="{x:StaticResource ShadowLight}"
                                                      Text="{Binding Name}"/>
                                                  <Label
                                                      Margin="0,0,0,5"
                                                      FontFamily="WorkSansRegular"
                                                      Opacity=".5"
                                                      FontSize="Small"
                                                      TextColor="{x:StaticResource ShadowLight}"
                                                      Text="{Binding Description}"/>
                                                  <StackLayout Orientation="Horizontal">
                                                     <Image 
                                                         Source="Ethereum.png"
                                                         WidthRequest="10"
                                                         HeightRequest="10"/>
                                                      <Label
                                                          Margin="0,5"
                                                          FontFamily="WorkSansRegular"
                                                          TextColor="{x:StaticResource ShadowLight}"
                                                          Text="{Binding Value, StringFormat='{0:F3}'}"/>
                                                      <Label
                                                          HorizontalOptions="EndAndExpand"
                                                          FontFamily="fa-regular-400"
                                                          VerticalTextAlignment="Center"
                                                          FontSize="Small"
                                                          TextColor="Red"
                                                          Text="&#xf004;"/>
                                                      <Label
                                                          VerticalTextAlignment="Center"
                                                          HorizontalOptions="End"
                                                          FontFamily="WorkSansRegular"
                                                          TextColor="{x:StaticResource ShadowLight}"
                                                          Opacity=".5"
                                                          FontSize="Small"
                                                          Text="{Binding Likes}"/>
                                                  </StackLayout>
                                              </StackLayout>
                                          </sharpnado1:MaterialFrame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </StackLayout>
                    </ScrollView>
                </xct:TabViewItem>

                <xct:TabViewItem
                    Icon="Stats.png"
                    TextColor="White"
                    Scale=".8"
                    Text=" "
                    TextColorSelected="Yellow"
                    FontSize="12">
                    <Grid BackgroundColor="{x:StaticResource Background}">
                        <Label    
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Text="TabContent2" />
                    </Grid>
                </xct:TabViewItem>
                 <xct:TabViewItem
                   ControlTemplate="{StaticResource FabTabItemTemplate}"
                    Text=" ">
                    <Grid BackgroundColor="{x:StaticResource Background}">
                        <Label    
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Text="TabContent2" />
                    </Grid>
                </xct:TabViewItem>
                <xct:TabViewItem
                    Icon="Explore.png"
                    TextColor="White"
                    Text=" "
                    Scale=".8"
                    TextColorSelected="Yellow"
                    FontSize="12">
                    <Grid BackgroundColor="{x:StaticResource Background}">
                        <Label
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Text="TabContent1" />
                    </Grid>
                </xct:TabViewItem>
                <xct:TabViewItem
                    Icon="People.png"
                    TextColor="White"
                    Text=" "
                    Scale=".8"
                    TextColorSelected="Yellow"
                    FontSize="12">
                    <Grid BackgroundColor="{x:StaticResource Background}">
                        <Label
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Text="PEssoas" />
                    </Grid>
                </xct:TabViewItem>
            </xct:TabView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
